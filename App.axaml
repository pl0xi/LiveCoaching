<Application
    x:Class="LiveCoaching.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LiveCoaching"
    RequestedThemeVariant="Dark">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <Styles>
            <Style Selector="Window">
                <Setter Property="Background" Value="#323232" />
                <Setter Property="MinHeight" Value="720" />
                <Setter Property="MinWidth" Value="1280" />
            </Style>
        </Styles>
        <FluentTheme />
    </Application.Styles>

    <Application.Resources>
        <FontFamily x:Key="NotoSans">avares://LiveCoaching/Assets/Fonts#NotoSans</FontFamily>
    </Application.Resources>
</Application>
